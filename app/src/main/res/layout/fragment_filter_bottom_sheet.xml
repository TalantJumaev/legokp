<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter &amp; Sort"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Sort By Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort By"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/rgSortBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/rbNameAsc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name (A-Z)"
                android:checked="true"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rbNameDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name (Z-A)"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rbPriceLow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: Low to High"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rbPriceHigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: High to Low"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rbRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Highest Rated"
                android:paddingVertical="8dp" />

            <RadioButton
                android:id="@+id/rbNewest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Newest First"
                android:paddingVertical="8dp" />

        </RadioGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Price Range Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Range"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgPriceRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPrice1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Under $50"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPrice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50 - $100"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPrice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$100 - $200"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPrice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Over $200"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Age Range Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age Range"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cgAgeRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_marginBottom="24dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAge1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4-7"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAge2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8-12"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAge3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13-17"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAge4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18+"
                style="@style/Widget.MaterialComponents.Chip.Filter" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <!-- Number of Parts Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Number of Parts"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="12dp" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/sliderParts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="5000"
            android:stepSize="100"
            app:values="@array/initial_slider_values"
            app:labelBehavior="withinBounds"
            android:layout_marginBottom="32dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnReset"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Reset"
                android:textSize="16sp"
                android:backgroundTint="@color/light_gray"
                android:textColor="@color/black"
                android:layout_marginEnd="8dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnApply"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Apply Filters"
                android:textSize="16sp"
                android:background="@drawable/bg_button_primary"
                android:textColor="@color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>