<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">

        <!-- Image Container with Badge -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <!-- Set Image -->
            <ImageView
                android:id="@+id/ivSet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/light_gray"
                android:contentDescription="LEGO Set Image" />

            <!-- Exclusive Badge (TOP LEFT) -->
            <TextView
                android:id="@+id/tvExclusive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|top"
                android:layout_margin="8dp"
                android:background="#FFD700"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="Exclusives"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|top"
                android:orientation="horizontal"
                android:layout_margin="8dp">

                <!-- Delete Button (TOP RIGHT) -->
                <ImageButton
                    android:id="@+id/btnDelete"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_favorite_button"
                    android:src="@drawable/ic_delete"
                    android:contentDescription="Delete set"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:layout_marginEnd="8dp" />

                <!-- Favorite Button (TOP RIGHT) -->
                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_favorite_button"
                    android:src="@drawable/ic_favorite_border"
                    android:contentDescription="Add to favorites"
                    android:scaleType="centerInside"
                    android:padding="8dp" />
            </LinearLayout>


        </FrameLayout>

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Info Icons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start"
                android:layout_marginBottom="8dp">

                <!-- Age -->
                <TextView
                    android:id="@+id/tvAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18+"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:drawableStart="@drawable/ic_age"
                    android:drawablePadding="4dp"
                    android:layout_marginEnd="12dp" />

                <!-- Parts -->
                <TextView
                    android:id="@+id/tvParts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2316"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:drawableStart="@drawable/ic_parts"
                    android:drawablePadding="4dp"
                    android:layout_marginEnd="12dp" />

                <!-- Rating -->
                <TextView
                    android:id="@+id/tvRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.7"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="4dp" />

            </LinearLayout>

            <!-- Set Name -->
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vincent van Gogh - The Starry Night"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Price -->
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$169.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginBottom="12dp" />

            <!-- Add to Bag Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToBag"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Add to Bag"
                android:textSize="13sp"
                android:textAllCaps="false"
                android:backgroundTint="@color/orange"
                android:textColor="@color/white"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_shopping_bag"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="18dp"
                app:iconTint="@color/white" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>